      <input type="text" name="photo" class="form-control" placeholder="Please Enter Fruit's Image URL" value="{{fruit.photo}}">{{elIf('<span class="text-danger">$self</span>',getErrorFor('photo'),hasErrorFor('photo'))}}
    </div>
    <div class="form-group">
    <div class="form-group">
      <label>Tastes</label>
      <input type="text" name="taste" class="form-control" placeholder="Please Describe It's Taste" value="{{fruit.tastes}}">{{elIf('<span class="text-danger">$self</span>',getErrorFor('taste'),hasErrorFor('taste'))}}
