      <label>Description</label>
      <input type="text" name="description" class="form-control" placeholder="Please Write Something About This Fruit" value="{{fruit.description}}">{{elIf('<span class="text-danger">$self</span>',getErrorFor('description'),hasErrorFor('description'))}}
